{
  "name": "spending-checker",
  "version": "1.0.0",
  "description": "Check your spendings easily",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client ",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "heroku-postbuild": "npm run client:install && npm run client:build ",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\"  \"npm run client\""
  },
  "keywords": [
    "react",
    "mern"
  ],
  "author": "Liubomyr Pidverbetskyi <plybomur720@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^6.1.2"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15"
  }
}
